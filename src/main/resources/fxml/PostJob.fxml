<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox prefHeight="1013.0" prefWidth="1030" style="-fx-background-color: #f9fafb; -fx-border-color: transparent transparent transparent #e5e7eb;" stylesheets="@../css/postjob.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devera.trabahanap.controller.PostJobController">
    <children>
        <ScrollPane hbarPolicy="NEVER" prefHeight="1366.0" prefWidth="1029.0" style="-fx-background-color:transparent;">
            <content>
                <AnchorPane prefHeight="1040.0" prefWidth="1031.0">
                    <children>
                        <StackPane prefHeight="1004.0" prefWidth="1031">
                            <children>
                                <VBox alignment="TOP_CENTER" prefWidth="1031" spacing="20">
                                    <padding>
                                        <Insets bottom="60" left="100" right="100" top="60" />
                                    </padding>
                                    <children>
                                        <VBox alignment="CENTER_LEFT" maxWidth="500.0" prefWidth="686.0" spacing="5">
                                            <Label style="-fx-font-size: 28px; -fx-font-family: 'Dubai Medium'; -fx-text-fill: #333333;" text="Post a New Job" />
                                            <Label style="-fx-font-size: 14px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #666666;" text="Fill in the details below to find the perfect service provider" />
                                        </VBox>

                                        <!-- Job Details Rectangle -->
                                        <StackPane prefHeight="800.0" prefWidth="831.0">
                                            <children>
                                                <Rectangle arcHeight="12" arcWidth="12" fill="white" height="720.0" stroke="#dcdcdc" strokeWidth="0.8" width="523.0" />
                                                <VBox maxWidth="536.0" prefHeight="791.0" prefWidth="536.0" spacing="14.0">
                                                    <padding>
                                                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                                                    </padding>
                                                    <children>
                                                        <Label style="-fx-font-size: 18px; -fx-font-family: 'Dubai Medium'; -fx-text-fill: #333333;" text="Job Details">
                                             <padding>
                                                <Insets top="20.0" />
                                             </padding></Label>

                                                        <!-- Job Title -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Job Title" />
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <TextField fx:id="titleField" promptText="e.g., Logo Design for Coffee Shop" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                            <Label style="-fx-font-size: 11px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #777777;" text="Create a clear, descriptive title for your job" />
                                                        </VBox>

                                                        <!-- Category -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Category" />
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <ComboBox fx:id="categoryComboBox" prefWidth="509" promptText="Select a category" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                        </VBox>

                                                        <!-- Description -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Description" />
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <TextArea fx:id="descriptionArea" prefHeight="119.0" prefWidth="475.0" promptText="Describe what you need in detail. Include requirements, expectations, and any specific instructions..." style="-fx-control-inner-background: #f3f3f5; -fx-background-color: #f3f3f5; -fx-text-fill: #717182;" wrapText="true" />
                                                            <Label style="-fx-font-size: 11px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #777777;" text="Minimum 50 characters. Be specific about your needs." />
                                                        </VBox>

                                                        <!-- Location -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Location" />
                                                                <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <TextField fx:id="locationField" promptText="e.g., Quezon City, Metro Manila" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                            <Label style="-fx-font-size: 11px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #777777;" text="Where should the service be performed?" />
                                                        </VBox>

                                                        <!-- Budget Range -->
                                                        <HBox alignment="CENTER" prefWidth="220.0" spacing="20">
                                                            <VBox prefHeight="48.0" prefWidth="227.0">
                                                                <children>
                                                                    <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Budget Range (Min)">
                                                                        <VBox.margin>
                                                                            <Insets bottom="3.0" />
                                                                        </VBox.margin>
                                                                    </Label>
                                                                    <TextField fx:id="budgetMinField" promptText="₱1000" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                                </children>
                                                            </VBox>
                                                            <VBox prefWidth="227.0">
                                                                <children>
                                                                    <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Budget Range (Max)">
                                                                        <VBox.margin>
                                                                            <Insets bottom="3.0" />
                                                                        </VBox.margin>
                                                                    </Label>
                                                                    <TextField fx:id="budgetMaxField" promptText="₱5000" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                                </children>
                                                            </VBox>
                                                        </HBox>

                                                        <!-- Experience Level -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Experience Level" />
                                                            </HBox>
                                                            <ComboBox fx:id="experienceLevelComboBox" prefWidth="509" promptText="Select experience level" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                        </VBox>

                                                        <!-- Skills Required -->
                                                        <VBox spacing="3">
                                                            <Label style="-fx-font-size: 13px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #444444;" text="Skills Required" />
                                                            <TextField fx:id="skillsField" promptText="e.g., Graphic Design, Adobe Illustrator" style="-fx-background-color: #f3f3f5; -fx-text-fill: #717182;" />
                                                            <Label style="-fx-font-size: 11px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #777777;" text="Add skills separated by commas" />
                                                        </VBox>
                                          <Region prefHeight="10.0" prefWidth="475.0" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </StackPane>

                                            <!-- Buttons -->
                                            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="831.0" spacing="15">
                                                <Button fx:id="cancelButton" onAction="#onCancelClicked" prefHeight="40.0" prefWidth="252.0" text="Cancel">
                                    <padding>
                                       <Insets bottom="-10.0" top="-10.0" />
                                    </padding>
                                 </Button>
                                                <Button fx:id="postButton" onAction="#onPostClicked" prefHeight="38.0" prefWidth="252.0" text="Post Job">
                                    <padding>
                                       <Insets bottom="-10.0" top="-10.0" />
                                    </padding>
                                 </Button>
                                            </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
