<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox prefHeight="1362.0" prefWidth="1030"
      style="-fx-background-color: #f9fafb; -fx-border-color: transparent transparent transparent #e5e7eb;"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.devera.trabahanap.controller.PostJobController">
    <children>
        <ScrollPane hbarPolicy="NEVER" prefHeight="1366.0" prefWidth="1030" style="-fx-background-color:transparent;">
            <content>
                <AnchorPane prefWidth="946">
                    <children>
                        <StackPane prefHeight="1106" prefWidth="1031">
                            <children>
                                <VBox alignment="TOP_CENTER" prefWidth="1031" spacing="20">
                                    <padding>
                                        <Insets bottom="60" left="100" right="100" top="60" />
                                    </padding>
                                    <children>
                                        <VBox alignment="CENTER_LEFT" maxWidth="500.0" prefWidth="686.0" spacing="5">
                                            <Label style="-fx-font-size: 28px; -fx-font-family: 'Dubai Medium'; -fx-text-fill: #333333;" text="Post a New Job" />
                                            <Label style="-fx-font-size: 14px; -fx-font-family: 'Microsoft New Tai Lue'; -fx-text-fill: #666666;" text="Fill in the details below to find the perfect service provider" />
                                        </VBox>

                                        <StackPane>
                                            <children>
                                                <Rectangle arcHeight="12" arcWidth="12" fill="white" height="814.0" stroke="#dcdcdc" strokeWidth="0.8" width="522.0" />
                                                <VBox maxWidth="536.0" prefHeight="838.0" prefWidth="536.0" spacing="13.0">
                                                    <padding>
                                                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                                                    </padding>
                                                    <children>
                                                        <Label style="-fx-font-size: 18px;" text="Job Details" />

                                                        <!-- Job Title -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Job Title" />
                                                                <Label style="-fx-font-size: 13px; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <TextField fx:id="titleField" promptText="e.g., Logo Design for Coffee Shop" />
                                                        </VBox>

                                                        <!-- Category -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Category" />
                                                                <Label style="-fx-font-size: 13px; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <ComboBox fx:id="categoryComboBox" prefWidth="509" promptText="Select a category" />
                                                        </VBox>

                                                        <!-- Description -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Description" />
                                                                <Label style="-fx-font-size: 13px; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <TextArea fx:id="descriptionArea" prefHeight="110" promptText="Describe what you need..." wrapText="true" />
                                                        </VBox>

                                                        <!-- Location -->
                                                        <VBox spacing="3">
                                                            <HBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Location" />
                                                                <Label style="-fx-font-size: 13px; -fx-text-fill: black;" text="*" />
                                                            </HBox>
                                                            <TextField fx:id="locationField" promptText="e.g., Quezon City, Metro Manila" />
                                                        </VBox>

                                                        <!-- Budget Range -->
                                                        <HBox spacing="20">
                                                            <VBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Budget Range (Min)" />
                                                                <TextField fx:id="budgetMinField" promptText="₱1000" />
                                                            </VBox>
                                                            <VBox spacing="3">
                                                                <Label style="-fx-font-size: 13px;" text="Budget Range (Max)" />
                                                                <TextField fx:id="budgetMaxField" promptText="₱5000" />
                                                            </VBox>
                                                        </HBox>

                                                        <!-- Experience Level -->
                                                        <VBox spacing="3">
                                                            <Label style="-fx-font-size: 13px;" text="Experience Level" />
                                                            <ComboBox fx:id="experienceLevelComboBox" prefWidth="509" promptText="Select experience level" />
                                                        </VBox>

                                                        <!-- Skills -->
                                                        <VBox spacing="3">
                                                            <Label style="-fx-font-size: 13px;" text="Skills (comma-separated)" />
                                                            <TextField fx:id="skillsField" promptText="e.g., Photoshop, Branding" />
                                                        </VBox>

                                                        <!-- Actions -->
                                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                                            <Button fx:id="cancelButton" text="Cancel" onAction="#onCancelClicked" />
                                                            <Button fx:id="postButton" text="Post Job" onAction="#onPostClicked" />
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                    </children>
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</VBox>