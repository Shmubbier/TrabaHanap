<StackPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #ebfdf7;" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devera.trabahanap.controller.RegisterController">

